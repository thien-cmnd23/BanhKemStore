@page "/admin/banhkem/details/{id:long}"
<h3 class="bg-info text-white text-center p-1">Details</h3>
<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr><th>ID</th><td>@BanhKem.BanhKemID</td></tr>
        <tr><th>Title</th><td>@BanhKem.Title</td></tr>
        <tr><th>Description</th><td>@BanhKem.Description</td></tr>
        <tr><th>Genre</th><td>@BanhKem.Genre</td></tr>
        <tr><th>Price</th><td>@BanhKem.Price.ToString("C")</td></tr>
    </tbody>
</table>
<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/books">Back</NavLink>
@code {
    [Inject]
    public IBanhKemStoreRepository Repository { get; set; }
    [Parameter]
    public long Id { get; set; }
    public BanhKem BanhKem { get; set; }
    protected override void OnParametersSet()
    {
        BanhKem = Repository.BanhKems.FirstOrDefault(b => b.BanhKemID == Id);
    }
    public string EditUrl => $"/admin/books/edit/{BanhKem.BanhKemID}";
}